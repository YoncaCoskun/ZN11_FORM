<mvc:View xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" controllerName="zn11_form.controller.SendItemPaf" height="100%"
      xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns:commons="sap.ui.commons" class="sapUiSizeCompact"
      xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns:tnt="sap.tnt" xmlns="sap.m">
      <tnt:ToolPage>
                        <tnt:header>
                  <tnt:ToolHeader>
                        <Button class="box-shadow" icon="sap-icon://menu2"  press="onSideNavButtonPress" type="Transparent">
                              <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow"/>
                              </layoutData>
                        </Button>
                        <ToolbarSeparator/>
                        <!--<Image densityAware="false" src="img/n11.png" width="40px"></Image>-->
                        <ToolbarSpacer/>
                        <Text class="box-shadow" text="" wrapping="false"/>
                        <tnt:ToolHeaderUtilitySeparator/>
                        <ToolbarSpacer>
                              <layoutData>
                                    <OverflowToolbarLayoutData minWidth="20px" priority="NeverOverflow"/>
                              </layoutData>
                        </ToolbarSpacer>
                        <Button press="handleUserNamePress" text="" type="Transparent" id="idButtonUserForm" icon="sap-icon://log">
                              <layoutData>
                                    <OverflowToolbarLayoutData priority="NeverOverflow"/>
                              </layoutData>
                        </Button>
                  </tnt:ToolHeader>
            </tnt:header>
            <tnt:sideContent>
                  <tnt:SideNavigation>
                        <tnt:item>
                              <tnt:NavigationList>
                                    <tnt:NavigationListItem icon="sap-icon://home" select="btnHomeClick" text="Home"/>                         
                              </tnt:NavigationList>
                        </tnt:item>
                  </tnt:SideNavigation>
            </tnt:sideContent>
            <tnt:mainContents>
                  <NavContainer>
                        <pages>
                              <Page id="idHomePageSendItemBudgetForm" showHeader="false">
                              <ScrollContainer height="100%" horizontal="false"  vertical="true">
      <IconTabBar class="sapUiResponsiveContentPadding" expanded="{device]/isNoPhone}">
            <items>
                  <IconTabFilter text="Document">
                        <Button icon="sap-icon://print" text="Print the document"/>
                        <Button icon="sap-icon://notes" text="Notes"/>
                        <Button icon="sap-icon://save" text="Save Changes"/>
                        <Panel class="sapUiSmallMargin panelContainer generalLabelFont generalLabelFontUi" expandable="false" width="95%">
                              <headerToolbar>
                                    <Toolbar class="box-header">
                                          <core:Icon class="size1 icon-shadow" color="#FFF" src="sap-icon://user-edit"/>
                                          <ToolbarSeparator/>
                                          <Title class="approvalText" text="Payment Approval"/>
                                    </Toolbar>
                              </headerToolbar>
                              <content>
                                    <Panel class="panelBottom" id="SendItemPaymentpanelFirs" width="auto">
                                          <content>
                                                <ImageContent class="imageLogo" src="img/logo-n11-large.png"></ImageContent>
                                          </content>
                                    </Panel>
                                    <Panel class="panelBottom" id="SendItempanelFirstContainerPayment" width="auto">
                                          <headerToolbar>
                                                <Toolbar height="3rem">
                                                      <Title class="boldText" text="Form Details"/>
                                                      <!--<ImageContent class="imageLogo" src="img/n11_logo.png"></ImageContent>-->
                                                </Toolbar>
                                          </headerToolbar>
                                          <content>
                                                <VBox class="sapUiSmallMargin">
                                                      <f:SimpleForm columnsXL="3" emptySpanM="0" columnsM="2" columnsL="2" editable="true" emptySpanL="0" emptySpanXL="0" labelSpanL="4"
                                                            labelSpanM="4" labelSpanXL="4" layout="ResponsiveGridLayout" maxContainerCols="3">
                                                            <f:content>
                                                                  <core:Title/>
                                                                  <Label text="Request Owner"/>
                                                                  <Input class="inputForm" value="" id="SendItemPayrequestOwner" enabled="false"/>
                                                                  <Label text="Department"/>
                                                                  <Input class="inputForm" value="" id="SendItemPaydepartment" enabled="false"/>
                                                                  <Label text="Title"/>
                                                                  <Input class="inputForm" value="" id="SendItemPaytitle" enabled="false"/>
                                                                  <Label text="Payment Form Type"/>
                                                                  <Input class="inputForm" value="" id="SendItemPayFormType" enabled="false"/>
                                                                  <core:Title/>
                                                                  <Label text="Request Number"/>
                                                                  <Input class="inputForm" value="" id="SendItemPayrequestNum" enabled="false"/>
                                                                  <Label text="Request Date"/>
                                                                  <DatePicker class="inputForm" id="SendItemPayrequestDate" value="" enabled="false" />
                                                                  <HBox>
                                                                        <Input class="inputForm" value="" id="SendItemPayrequestTime" enabled="false"/>
                                                                  </HBox>
                                                                  <Label text="Status"/>
                                                                  <Input class="inputForm" value="In-Progress" id="SendItemPaystatus" enabled="false"/>
                                                            </f:content>
                                                      </f:SimpleForm>
                                                </VBox>
                                          </content>
                                    </Panel>
                                    <Panel class="panelBottom buttonPosition" id="SendItempanelSecondContainerPayment" width="auto">
                                          <headerToolbar>
                                                <Toolbar height="3rem">
                                                      <Title class="boldText" text="Invoice Details"/>
                                                </Toolbar>
                                          </headerToolbar>
                                          <VBox class="sapUiSmallMargin">
                                                <f:SimpleForm editable="true" layout="ResponsiveGridLayout">
                                                      <f:content>
                                                            <core:Title/>
                                                            <Label text="Invoice Date"/>
                                                            <DatePicker class="inputForm" id="SendItemPayInvoiceDate" value="" width="100%"  enabled="false"/>
                                                            <Label text="Expiry Date"/>
                                                            <DatePicker class="inputForm" id="SendItemPayExpiryDate" value="" width="100%" enabled="false"/>
                                                            <Label text="Currency Type" />
                                                            <Input class="inputForm" value="" width="100%" id="SendItemPayCurrencyType" enabled="false"/>
                                                            <Input class="inputForm" value="" width="100%" id="SendItemPayCurrency" enabled="false"/>
                                                            <Label text="Invoice Number"/>
                                                            <Input class="inputForm" value="" width="100%" id="SendItemPayInvoiceNum" enabled="false"/>
                                                      </f:content>
                                                </f:SimpleForm>
                                          </VBox>
                                    </Panel>
                                    <Panel class="panelBottom buttonPosition" id="SendItempanelThirdContainerPayment" width="auto">
                                          <headerToolbar>
                                                <Toolbar height="3rem">
                                                      <Title class="boldText" text="Budget Approval Form"/>
                                                </Toolbar>
                                          </headerToolbar>
                                          <content>
                                                <VBox class="sapUiSmallMargin">
                                                      <f:SimpleForm editable="true" layout="ResponsiveGridLayout">
                                                            <f:content>
                                                                  <Label text="Related Budget No"/>
                                                                  <Table id="SendItemPayBafidTable" inset="false" items="{ path: '/'}">
                                                                        <columns>
                                                                              <Column width="12em">
                                                                                    <Text text="Budget Number"/>
                                                                              </Column>
                                                                              <Column demandPopin="true" minScreenWidth="Tablet">
                                                                                    <Text text="Total BAF"/>
                                                                              </Column>
                                                                              <Column demandPopin="true" minScreenWidth="Tablet">
                                                                                    <Text text="Used BAF"/>
                                                                              </Column>
                                                                              <Column demandPopin="true" hAlign="Right" minScreenWidth="Tablet">
                                                                                    <Text text="Used Amount (TRY)"/>
                                                                              </Column>
                                                                              <Column demandPopin="true" hAlign="Right" minScreenWidth="Tablet">
                                                                                    <Text text="Remaining Amount(TRY)"/>
                                                                              </Column>
                                                                        </columns>
                                                                        <items>
                                                                              <ColumnListItem>
                                                                                    <cells>
                                                                                          <Text text="{REBAF}"/>
                                                                                          <Text text="{TOBAF}"/>
                                                                                          <Text text="{USBAF}"/>
                                                                                          <Text text="{USAMO}"/>
                                                                                          <Text text="{REAMO}"/>
                                                                                    </cells>
                                                                              </ColumnListItem>
                                                                        </items>
                                                                  </Table>
                                                                  <Label text=""/>
                                                                  <Button ariaDescribedBy="defaultButtonDescription genericButtonDescription" visible="false" text="Add" width="20%">
                                                                        <layoutData>
                                                                              <FlexItemData growFactor="1"/>
                                                                        </layoutData>
                                                                  </Button>
                                                                  <HBox>
                                                                        <Label class="labelPay" text="Total Amount:"/>
                                                                        <Input class="inputForm" value="" id="SendItemPayTotalAmount" enabled="false"/>
                                                                  </HBox>
                                                                  <Label text="Doc(invoice..etc)" visible="true"/>
                                                                  <Button text="Add" width="10%" visible="false">
                                                                        <layoutData>
                                                                              <FlexItemData growFactor="1"/>
                                                                        </layoutData>
                                                                  </Button>
                                                            </f:content>
                                                      </f:SimpleForm>
                                                </VBox>
                                          </content>
                                    </Panel>
                                    <Panel class="panelBottom" id="SendItempanelFourthContainerPayment" width="auto">
                                          <headerToolbar>
                                                <Toolbar height="3rem">
                                                      <Title class="boldText" text="Vendor Details"/>
                                                </Toolbar>
                                          </headerToolbar>
                                          <content>
                                                <VBox class="sapUiSmallMargin">
                                                      <f:SimpleForm editable="false" layout="ResponsiveGridLayout">
                                                            <f:content>
                                                                  <Label text="Vendor Name"/>
                                                                  <Input class="inputForm" id="SendItemPayVenName" liveChange="additionalInfoValidation" showSuggestion="true"
                                                            showValueHelp="true" suggestionItems="{/SuppSet}" type="Text" valueHelpRequest="handleValueHelpVendor" valueState="{/supplierState}" enabled="false">
                                                            <suggestionItems>
                                                                  <core:Item key="" text="{path:'vendorModel>',
                                                                              formatter: '.formatSupp'}" id="SendItemidTextSupp"/>
                                                            </suggestionItems>
                                                                  </Input>
                                                                  <Label text="Vendor Address"/>
                                                                  <TextArea class="inputTextArea"  value="" id="SendItemPayVenAdd" enabled="false"/>
                                                                  <Label text="Vendor VKN/TCKN"/>
                                                                  <Input class="inputForm"  value="" id="SendItemPayVenTC" enabled="false"/>
                                                                  <Label text="Vendor Phone No"/>
                                                                  <Input class="inputForm" value="" id="SendItemPayVenPhone" enabled="false"/>
                                                                  <Label text="Contact Person"/>
                                                                  <Input class="inputForm" value="" id="SendItemPayConPer" enabled="false"/>
                                                                  <Label text="Vendor E-Mail"/>
                                                                  <Input class="inputForm"  value="" id="SendItemPayVenMail" enabled="false"/>
                                                                  <Label text="Bank Name"/>
                                                                  <Input class="inputForm"  value="" id="SendItemPayBankName" enabled="false"/>
                                                                  <Label text="IBAN Number"/>
                                                                  <Input class="inputForm"  value="" id="SendItemPayIBAN" enabled="false"/>
                                                            </f:content>
                                                      </f:SimpleForm>
                                                </VBox>
                                          </content>
                                    </Panel>
                                    <Panel class="panelBottom buttonPosition" id="SendItempanelFifthContainerPayment" width="auto">
                                          <headerToolbar>
                                                <Toolbar height="3rem">
                                                      <Title class="boldText" text="Payment Details"/>
                                                </Toolbar>
                                          </headerToolbar>
                                          <content>
                                                <VBox class="sapUiSmallMargin">
                                                      <f:SimpleForm editable="true" layout="ResponsiveGridLayout" maxContainerCols="3">
                                                            <f:content>
                                                                  <Label text="Type"/>
                                                                  <Input class="inputForm"  value="" id="SendItemPayType" enabled="false" />
                                                                  <Label text="Subject"/>                                                  
                                                                  <TextArea value="" growing="true" width="100%" id="SendItemPaySubject" enabled="false"/>
                                                                  <Label text="Payment Type"/>
                                                                  <RadioButtonGroup columns="2" select="clickPayment" id="SendItemPaymentType" >
                                                                        <buttons>
                                                                              <RadioButton id="SendItemRB-Down" text="Down Payment" enabled="false"/>
                                                                              <RadioButton id="SendItemRB-Ins" text="Installment Payment" enabled="false"/>
                                                                        </buttons>
                                                                  </RadioButtonGroup>
                                                                  <Label text=""/>
                                                                  <VBox>
                                                                        <Table id="SendItemPayInstallementTbl" inset="false" items="{ path: '/results', sorter: { path: 'installement' } }">
                                                                              <columns>
                                                                                    <Column width="12em">
                                                                                          <Text text="Installement"/>
                                                                                    </Column>
                                                                                    <Column demandPopin="true" minScreenWidth="Tablet">
                                                                                          <Text text="Expiry Date"/>
                                                                                    </Column>
                                                                                    <Column demandPopin="true" hAlign="Right" minScreenWidth="Tablet">
                                                                                          <Text text="VAT Incl. Amount"/>
                                                                                    </Column>
                                                                              </columns>
                                                                              <items>
                                                                                    <ColumnListItem>
                                                                                          <cells>
                                                                                                <Text text="{installement}"/>
                                                                                                <Text text="{expdt}"/>
                                                                                                <Text text="{vatInclAmount}"/>
                                                                                          </cells>
                                                                                    </ColumnListItem>
                                                                              </items>
                                                                        </Table>
                                                                  </VBox>
                                                                  <Label text="Installment Amount"/>
                                                                  <Input class="inputForm" id="SendItemPayInsAmount" value="" enabled="false"/>
                                                                  <Label text="Comment"/>
                                                                  <TextArea class="inputTextArea" id="SendItemPayComment" enabled="false"/>
                                                                  <Label text="Payment Amount"/>
                                                                  <Input class="inputForm" id="SendItemidPayAmount" value="" enabled="false"/>
                                                                  <Label text="VAT Amount"/>
                                                                  <Input class="inputForm" id="SendItemPayidVatAmount" value="" enabled="false"/>
                                                                  <Label text="Withholding Tax"/>
                                                                  <Input class="inputForm" id="SendItemPayidTax" value="" enabled="false"/>
                                                                  <Label text="VAT Incl. Amount"/>
                                                                  <Input class="inputForm" id="SendItemPayidVatIncAmount" value="" enabled="false"/>
                                                                  <Label text="Advance Information"/>
                                                                  <Input class="inputForm" value="" id="SendItemPayAdvanceInf" enabled="false"/>
                                                                  <Label text="Advance Amount"/>
                                                                  <Input class="inputForm" value="" id="SendItemPayAdvAmount" enabled="false"/>
                                                                  <Label text="Net Payment Amount"/>
                                                                  <Input class="inputForm" value="" id="SendItemPayNetAmount" enabled="false"/>
                                                            </f:content>
                                                      </f:SimpleForm>
                                                </VBox>
                                          </content>
                                    </Panel>
                                          <Panel class="panelBottom" id="SendItempanelFourthContainerPaf" width="auto">
                                          <headerToolbar>
                                                <Toolbar height="3rem">
                                                      <Title class="boldText" text="Attachment"/>
                                                </Toolbar>
                                          </headerToolbar>
                                          <content>
            <Table id="idSendItemAttachTablePaf"
            inset="false"
            items="{
                  path: '/item'
            }">
            <columns>
                  <Column
                        width="6rem">
                        <Text text="Name" />
                  </Column>
                  <Column
                  width="12rem"
                        minScreenWidth="Tablet"
                        demandPopin="true">
                        <Text text="Download" />
                  </Column>
            </columns>
            <items>
                  <ColumnListItem type="Active">
                        <cells>
                              <ObjectIdentifier
                                    title="{FILENAME}" />
                              <Button icon="sap-icon://download"  type="Emphasized" text="{FILENAME}.{FILETYPE}"  press="onAttachWatch"/>
                        </cells>
                  </ColumnListItem>
            </items>
      </Table>
                                          </content>
                                    </Panel>
                              </content>
                        </Panel>
                  
                              
                  </IconTabFilter>
                  <IconTabFilter text="Flow">
                        <Panel id="SendItemPaymentFlowPanel1" width="auto" class="sapUiResponsiveMargin" accessibleRole="Region">
                                    <headerToolbar>
                                          <Toolbar height="3rem">
                                                <Title text="Flow Properties"/>
                                          </Toolbar>
                                    </headerToolbar>
                                    <content>
                                          <VBox class="sapUiSmallMargin">
                                                      <f:SimpleForm columnsXL="3" emptySpanM="0" columnsM="2" columnsL="2" editable="true" emptySpanL="0" emptySpanXL="0" labelSpanL="4"
                                                            labelSpanM="4" labelSpanXL="4" layout="ResponsiveGridLayout" maxContainerCols="3">
                                                            <f:content>
                                                                  <core:Title/>
                                                                  <Label text="Request Number"/>
                                                                  <Input class="inputForm" value="" id="SendItemPayFlowRequestNum" enabled="false"/>
                                                                  <Label text="Request Owner"/>
                                                                  <Input class="inputForm" value="" id="SendItemPayFlowRequestOwner" enabled="false" />
                                                                  <Label text="Request Type"/>
                                                                  <Input class="inputForm" value="" id="SendItemPayFlowRequestType" enabled="false"/>
                                                                  <Label text="Subject"/>
                                                                  <Input class="inputForm" value="" id="SendItemPayFlowSubject" enabled="false"/>
                                                                  <Label text="Status"/>
                                                                  <Input class="inputForm" value="" id="SendItemPayFlowStatus" enabled="false"/>
                                                                  <core:Title/>
                                                            </f:content>
                                                      </f:SimpleForm>
                                                </VBox>
                                    </content>
                        </Panel>
                        <Panel width="auto" id="SendItemPaymentFlowPanel2" class="sapUiResponsiveMargin">
                                    <headerToolbar>
                                          <Toolbar height="3rem">
                                                <Title text="Flow History"/>
                                          </Toolbar>
                                    </headerToolbar>
                                    <content>
                                                <Table id="SendItemPaymentFlowTbl" inset="false" items="{path: '/', sorter: { path: 'DATUM,UZEIT'}}" visible="true">
                                                      <columns>
                                                                              <Column width="3rem">
                                                                                    <Text text="User Id"/>
                                                                              </Column>
                                                                              <Column width="10rem">
                                                                                    <Text text="User"/>
                                                                              </Column>
                                                                              <Column demandPopin="true" minScreenWidth="Tablet" width="10rem">
                                                                                    <Text text="Title"/>
                                                                              </Column>
                                                                              <Column demandPopin="true" minScreenWidth="Tablet" width="10rem">
                                                                                    <Text text="Department"/>
                                                                              </Column>
                                                                              <Column demandPopin="true"  minScreenWidth="Tablet" width="8rem">
                                                                                    <Text text="Status"/>
                                                                              </Column>                                                                        
                                                                              <Column demandPopin="true"  minScreenWidth="Tablet" width="12rem">
                                                                                    <Text text="Request Date"/>
                                                                              </Column>
                                                                              <Column demandPopin="true" minScreenWidth="Tablet" width="12rem">
                                                                                    <Text text="Response Date"/>
                                                                              </Column>
                                                      </columns>
                                                                  <items>
                                                                        <ColumnListItem>
                                                                              <cells>
                                                                                    <Text text="{PERNR}"/>
                                                                                    <Text text="{FNAME}  {LNAME}"/>
                                                                                    <Text text="{TITLE}"/>
                                                                                    <Text text="{DEPRT}"/>  
                                                                                    <Text text="{path: 'OBJTY' , formatter: '.setEventType'}"/>
                                                                                    <Text text="{DATUM}  {UZEIT}"/>     
                                                                                    <Text text=""/>                                                                     
                                                                              </cells>
                                                                        </ColumnListItem>
                                                                  </items>
                                                </Table>
                                                            <Table id="SendItemPaymentFlowTbl2" inset="false"  visible="false">
                                                      <columns>
                                                                              <Column width="3rem">
                                                                                    <Text text="User Id"/>
                                                                              </Column>
                                                                              <Column width="10rem">
                                                                                    <Text text="User"/>
                                                                              </Column>
                                                                              <Column demandPopin="true" minScreenWidth="Tablet" width="10rem">
                                                                                    <Text text="Title"/>
                                                                              </Column>
                                                                              <Column demandPopin="true" minScreenWidth="Tablet" width="10rem">
                                                                                    <Text text="Department"/>
                                                                              </Column>
                                                                              <Column demandPopin="true"  minScreenWidth="Tablet" width="8rem">
                                                                                    <Text text="Status"/>
                                                                              </Column>                                                                        
                                                                              <Column demandPopin="true"  minScreenWidth="Tablet" width="12rem">
                                                                                    <Text text="Request Date"/>
                                                                              </Column>
                                                                              <Column demandPopin="true" minScreenWidth="Tablet" width="12rem">
                                                                                    <Text text="Response Date"/>
                                                                              </Column>
                                                      </columns>
                                                                  <items>
                                                                        <ColumnListItem>
                                                                              <cells>
                                                                                    <Text text="" id="senditemPayUserId"/>
                                                                                    <Text text="" id="senditemPayUser"/>
                                                                                    <Text text="" id="senditemPayTitle"/>
                                                                                    <Text text="" id="senditemPayDprt"/>      
                                                                                    <Text text="" id="senditemPayEvnt"/>
                                                                                    <Text text="" id="senditemPayReqDate"/>   
                                                                                    <Text text=""/>                                                                     
                                                                              </cells>
                                                                        </ColumnListItem>
                                                                  </items>
                                                </Table>
                  
                                    </content>
                        </Panel>    
                  </IconTabFilter>
                  
            </items>
      </IconTabBar>
                                    </ScrollContainer>
                              </Page>
                        
                              <ScrollContainer height="100%" horizontal="false"  vertical="true">                                
                              </ScrollContainer>

                        </pages>
                  </NavContainer>
            </tnt:mainContents>
      </tnt:ToolPage>   
            
            
            
</mvc:View>